	"entrypoints": {
		"main": [
			"top.xinstudio.xinxin.BetterSynthesis"
		],
		"fabric-datagen": [
			"top.xinstudio.xinxin.BetterSynthesisDataGenerator"
		],
		"client": ["top.xinstudio.xinxin.BetterSynthesisClient"]
	},
	"mixins": [
		"better-synthesis.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.11",
		"minecraft": "~1.20.4",
