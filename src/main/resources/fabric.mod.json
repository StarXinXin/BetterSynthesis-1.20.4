	],
	"contact": {
		"homepage": "https://xinstudio.top/",
		"sources": "https://github.com/StarXinXin/BetterSynthesis-1.20.4"
	},
	"license": "MIT License",
	"icon": "assets/better-synthesis/icon.png",
